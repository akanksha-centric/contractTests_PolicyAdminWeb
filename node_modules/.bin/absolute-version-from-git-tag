#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@pact-foundation/absolute-version/dist/bin/absolute-version-from-git-tag.js" "$@"
else 
  exec node  "$basedir/../@pact-foundation/absolute-version/dist/bin/absolute-version-from-git-tag.js" "$@"
fi
